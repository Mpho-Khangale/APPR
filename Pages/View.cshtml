@page
@model Disaster_Alleviation.Pages.ViewModel
@{
    ViewData["Title"] = "View";
}


<!DOCTYPE html>
<html>
<head>
    <title>View Disasters</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
        }

        .table-container {
            width: 80%;
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border: 2px solid #ccc;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h1>Disasters</h1>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Aid Type</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData["Disasters"] != null)
                {
                    foreach (var row1 in ViewData["Disasters"] as List<string[]>)
                    {
                        <tr>
                            <td>@row1[0]</td>
                            <td>@row1[1]</td>
                            <td>@row1[2]</td>
                            <td>@row1[3]</td>
                            <td>@row1[4]</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
</html>

